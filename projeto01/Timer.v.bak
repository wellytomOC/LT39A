module Timer (
    input wire[6:0] ref,
    input wire clock, reset,

    output reg trigger,
    output reg[6:0]TimeRemaining
);

    reg[6:0] counter;

    always @(posedge clock or reset) begin
        if (reset) begin
            counter = 8b'0;
            trigger = 1'b0;
        end else begin
            if (counter == ref) begin
                trigger <= 1'b1;  
                counter <= 8'b0; 
            end else begin
                trigger <= 1'b0;  
                counter <= counter + 1; 
            end
        end
    end

    
endmodule